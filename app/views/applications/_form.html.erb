<%= form_with model: application, url: job_applications_path(job) do |f| %>

    <div class="mb-3">
      <%= render "devise/shared/error_messages", resource: application %>
    </div>

    <%= f.hidden_field :user_id, value: current_user.id %>

    <div class="mb-3">
        <%= f.label :previous_job, class: "form-label" %>
        <%= f.text_field :previous_job, class: "form-control" %>
    </div>

    <div class="mb-3">
        <%= f.label :previous_experience, class: "form-label" %>
        <%= f.text_area :previous_experience, class: "form-control" %>
    </div>

    <div class="mb-3">
        <%= f.label :years_experience, class: "form-label" %>
        <%= f.number_field :years_experience, class: "form-control", style: "width: 25%" %>
    </div>

    <div class="mb-3">
        <%= f.label :cover_letter, class: "form-label" %>
        <%= f.text_area :cover_letter, class: "form-control" %>
    </div>

    <div class="mb-3">
        <%= f.label :date_available, class: "form-label" %>
        <%= f.date_field :date_available, class: "form-control" %>
    </div>

    <div class="actions">
        <%= f.submit "Submit Application", class: "btn btn-outline-primary" %>
    </div>
<% end %>