    <h5 class="card-header"><%= job.title %> in <%= job.location.city %></h5>
    <div class="card-body">
        <p class="card-text"><%= job.description %></p>
        <%= button_to "View Job", location_job_path(job.location, job), class: "btn btn-outline-primary float-end", method: :get %>
    </div>
</div>
