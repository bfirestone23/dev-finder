<%= form_with model: job do |f| %>

    <div class="mb-3">
      <%= render "devise/shared/error_messages", resource: job %>
    </div>

    <div class="mb-3">
        <%= f.label :title, class: "form-label" %>
        <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="mb-3">
        <%= f.label :description, class: "form-label" %>
        <%= f.text_area :description, class: "form-control" %>
    </div>

    <div class="mb-3">
        <%= f.label :location_id, "Select an existing location", class: "form-label" %>
        <%= f.collection_select :location_id, @locations, :id, :city, include_blank: true, class: "form-control" %><br>
        <%= f.label :city, "Or enter a new location", class: "form-label" %>
        <%= f.text_field :city, class: "form-control", style: "width: 25%" %>
    </div>

    <div class="actions">
        <%= f.submit "Post Job", class: "btn btn-outline-primary" %>
    </div>
<% end %>