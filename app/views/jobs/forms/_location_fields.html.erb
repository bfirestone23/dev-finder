<div class="mb-3">
    <%= f.label :location_id, "Select an existing location:", class: "form-label" %>
    <%= f.collection_select :location_id, locations, :id, :city, include_blank: true, class: "form-control" %><br>
    <%= f.label :city, "Or enter a new location:", class: "form-label" %>
    <%= f.text_field :city, class: "form-control", style: "width: 35%" %>
</div>