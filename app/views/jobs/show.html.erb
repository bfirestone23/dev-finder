<div class="container-fluid" style="width: 50%">
    <h1><%= @job.title %></h1>
    <h5>Posted by: <%= @job.users.where(employer: true).first.email %></h5>
    <br>
    <div class="btn-group">
        <%= link_to "Edit Job", edit_location_job_path(@job.location, @job), class: "btn btn-outline-primary" if current_user == @job.users.where(employer: true).first %>
        <%= link_to "Delete Job", location_job_path(@job.location, @job), method: :delete, class: "btn btn-outline-primary" if current_user == @job.users.where(employer: true).first %>
    </div>


    <br><br>
    <div>
        <p>
            <strong>Location:</strong> <%= @job.location.city %>
        </p>

        <p>
            <strong>Description:</strong> <%= @job.description %>
        </p>

        <p>
            <strong>Payment:</strong> <%= @job.pay %>
        </p>    
    </div>
</div>